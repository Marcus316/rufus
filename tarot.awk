@include "util.awk"
@include "irc.awk"
function drawtarot(Service, args) {
  selection = randint(78)
  flip = 0
  output = tarotcard[selection]
  if (randint(2) == 1) {
    output = output" (Reversed)"
    flip = 1
  }
  output = output" - "tarotdesc[selection","flip]
  sendmsg(Service, args["target"], output)
}

